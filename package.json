{
  "name": "typescript-koans",
  "version": "1.0.0",
  "description": "Learn TypeScript through test-driven koans inspired by Ruby koans",
  "main": "lib/path-to-enlightenment.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "generate": "node lib/generate-koans.js",
    "test": "yarn build && node koans/lib/path-to-enlightenment.js",
    "test:watch": "yarn build && node koans/lib/path-to-enlightenment.js --watch",
    "watch": "node watch-test.js",
    "watch:nodemon": "nodemon --watch koans --ext ts --exec \"yarn test\"",
    "walk": "yarn test",
    "clean": "rm -rf koans/ lib/",
    "reset": "yarn clean && yarn generate"
  },
  "keywords": [
    "typescript",
    "learning",
    "koans",
    "tdd",
    "education"
  ],
  "author": "TypeScript Koans Contributors",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "nodemon": "^3.1.10",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
